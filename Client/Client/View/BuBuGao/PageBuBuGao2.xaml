<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.View.BuBuGao.PageBuBuGao2">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackLayout x:Name="gHead" Orientation="Horizontal">
                <Button x:Name="btnLast" Text="last" />
                <Editor x:Name="txtCurrentRowNumber" />
                <Button x:Name="btnNext2" Text="next" />
            </StackLayout>
            
            <Button x:Name="btnNext" Text="{Binding Content}" Grid.Row="1" FontSize="100">

            </Button>

            <Button x:Name="btnPlaySound" Text="播放" BackgroundColor="Green" Grid.Row="1">

            </Button>

            <StackLayout x:Name="gBottom" Orientation="Horizontal">
                <Button x:Name="btnPass" Text="正确" />
                <Button x:Name="btnFail" Text="错误" />
            </StackLayout>
            
        </Grid>
        
    </ContentPage.Content>
</ContentPage>