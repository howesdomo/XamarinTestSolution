<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.View.LabelDemo.LabelDemo_V1">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Text="Certification Board: " FontSize="22" 
                   BackgroundColor="Yellow"
                   HorizontalOptions="Start" 
                   VerticalOptions="Start" LineBreakMode="TailTruncation" />
            
            <Label Text="STATE BOARD OF EXAMINERS" Grid.Column="1" FontSize="28"
                   BackgroundColor="SkyBlue"
                   HorizontalOptions="Start"  
                   VerticalOptions="FillAndExpand" LineBreakMode="WordWrap"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>