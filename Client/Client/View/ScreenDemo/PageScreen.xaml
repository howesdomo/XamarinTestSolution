<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="屏幕(实现接口 IScreen)"
             x:Class="Client.View.PageScreen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="-----屏幕方向-----" HorizontalTextAlignment="Center" />
            <Button x:Name="btn1" Text="根据陀螺仪" />
            <Button x:Name="btn2" Text="竖屏" />
            <Button x:Name="btn2_2" Text="竖屏(倒)" />
            <Button x:Name="btn3" Text="横屏(左)" />
            <Button x:Name="btn3_2" Text="横屏(右)" />
            <Button x:Name="btn4" Text="不根据陀螺仪" />


            <Label Text="-----屏幕常亮-----" HorizontalTextAlignment="Center" />
            <StackLayout Orientation="Horizontal">
                <Label Text="常亮" VerticalTextAlignment="Center" HorizontalOptions="StartAndExpand" />
                <Switch x:Name="swScreenKeepOn" />
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>