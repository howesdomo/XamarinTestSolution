<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Client.View.XF_4p6_Features.PageFontAwesome"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:Util.XamariN.Behaviors;assembly=Util.XamariN"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Util.XamariN.Components;assembly=Util.XamariN"
    xmlns:utilFont="clr-namespace:Util_Font;assembly=Util.HowesDOMO"
    xmlns:view="clr-namespace:Client.View.XF_4p6_Features"
    Title="FontAwesome列表"
    mc:Ignorable="d">
    <NavigationPage.TitleView>
        <Grid>
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="VerticalTextAlignment" Value="Center" />
                    <Setter Property="TextColor" Value="Black" />
                    <Setter Property="FontSize" Value="20" />
                </Style>
            </Grid.Resources>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  Title  -->
            <ui:MarqueeLabel
                FontSize="20"
                Text="FontAwesome列表"
                TextColor="White" />

            <StackLayout
                Grid.Column="1"
                Orientation="Horizontal">
                <Image
                    Margin="5,0,15,0"
                    Source="{FontImage FontFamily=FontAwesome,
                                       Glyph={x:Static utilFont:FontAwesomeIcons.List},
                                       Color=White,
                                       Size=20}">
                    <Image.Behaviors>
                        <behaviors:ViewTapLikeButtonBehavior />
                    </Image.Behaviors>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CMD_ViewOfList}"
                            NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>

                <Image
                    Margin="5,0,15,0"
                    Source="{FontImage FontFamily=FontAwesome,
                                       Glyph={x:Static utilFont:FontAwesomeIcons.GripVertical},
                                       Color=White,
                                       Size=20}">
                    <Image.Behaviors>
                        <behaviors:ViewTapLikeButtonBehavior />
                    </Image.Behaviors>
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer
                            Command="{Binding CMD_ViewOfGrid}"
                            NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
            </StackLayout>

        </Grid>
    </NavigationPage.TitleView>

    <ContentPage.Resources>
        <ResourceDictionary>

            <LinearItemsLayout
                x:Key="ItemLayoutOfList"
                ItemSpacing="5"
                Orientation="Vertical" />

            <GridItemsLayout
                x:Key="ItemLayoutOfGrid"
                Orientation="Vertical"
                Span="4"
                VerticalItemSpacing="20" />

            <DataTemplate x:Key="DataTemplateOfList">
                <StackLayout
                    Orientation="Vertical"
                    Spacing="0">
                    <Label
                        Margin="20,0,20,0"
                        Text="{Binding Name}"
                        TextColor="Black" />

                    <StackLayout
                        Margin="20,0,0,0"
                        Orientation="Horizontal"
                        Spacing="0">

                        <Label Text="{Binding Code_XML}" />
                        <Image
                            Margin="20,0,0,0"
                            WidthRequest="100">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="FontAwesome"
                                    Glyph="{Binding Code}"
                                    Size="26"
                                    Color="Black" />
                            </Image.Source>
                        </Image>

                        <Image
                            Margin="20,0,0,0"
                            WidthRequest="100">
                            <Image.Source>
                                <FontImageSource
                                    FontFamily="FontAwesome_Brands"
                                    Glyph="{Binding Code}"
                                    Size="26"
                                    Color="Black" />
                            </Image.Source>
                        </Image>
                    </StackLayout>
                </StackLayout>
            </DataTemplate>

            <DataTemplate x:Key="DataTemplateOfGrid">
                <StackLayout
                    Orientation="Horizontal"
                    Spacing="0">
                    <Image WidthRequest="40">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FontAwesome"
                                Glyph="{Binding Code}"
                                Size="26"
                                Color="Black" />
                        </Image.Source>
                    </Image>

                    <Label Text="|" />

                    <Image WidthRequest="40">
                        <Image.Source>
                            <FontImageSource
                                FontFamily="FontAwesome_Brands"
                                Glyph="{Binding Code}"
                                Size="26"
                                Color="Black" />
                        </Image.Source>
                    </Image>
                </StackLayout>
            </DataTemplate>

        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <view:PageFontAwesome_ViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <ui:FilterBar
                Placeholder="输入需要查询的图标名称"
                SearchCommand="{Binding CMD_Filter}" />

            <CollectionView
                Margin="10,0,10,0"
                ItemSizingStrategy="MeasureFirstItem"
                ItemTemplate="{Binding ItemTemplate}"
                ItemsLayout="{Binding ItemsLayout}"
                ItemsSource="{Binding FiltedList}"
                SelectedItem="{Binding SelectedItem}"
                SelectionMode="Single"
                VerticalScrollBarVisibility="Always">
                <CollectionView.EmptyView>
                    <StackLayout
                        HorizontalOptions="Fill"
                        VerticalOptions="Fill">
                        <Label
                            HorizontalOptions="Fill"
                            HorizontalTextAlignment="Center"
                            Text="搜索结果为空"
                            VerticalOptions="Fill"
                            VerticalTextAlignment="Center" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>